{
  "name": "playwright-security-runner",
  "version": "2.0.0",
  "description": "Dynamic security testing of web forms using Playwright",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "security-test": "dist/index.js"
  },
  "scripts": {
    "build": "tsdown src/index.ts --format esm --dts",
    "prepare": "npm run build",
    "start": "node dist/index.js",
    "postinstall": "npx playwright install chromium"
  },
  "keywords": [
    "security",
    "playwright",
    "penetration-testing",
    "xss",
    "sqli",
    "csrf"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsdown": "^0.9.0",
    "typescript": "^5.3.0"
  }
}
